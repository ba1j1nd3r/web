<div class="row">
    <div class="col-md-12">
        <h2>items 
</h2>

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>items&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td><a href="/items?category={{category}}">{{category}}</a></td>
                        <td>{{price}}</td>
                        <td>{{published}}</td>
                           <td><a class="btn btn-danger" href="/items/delete/{{id}}">remove</a></td> 
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}

</div>
</div>